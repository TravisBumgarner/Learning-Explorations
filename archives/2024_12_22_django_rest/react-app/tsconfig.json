{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false, // Todo: change
    "module": "ES2022",
    "target": "es2022",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["src/types/*"],
      "src/*": ["src/*"]
    }
  }
}
