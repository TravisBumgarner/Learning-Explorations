{
    "compilerOptions": {
        "outDir": "./lib/",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "sharedComponents": [
                "src/sharedComponents"
            ],
            "theme": [
                "src/theme.tsx"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}