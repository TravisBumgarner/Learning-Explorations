{
    "manifest_version": 3,
    "name": "Record",
    "version": "1.0.0",
    "description": "Hello World",
    "action": {
        "default_title": "Click Me",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabCapture"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "externally_connectable": {
        "matches": [
            "http://localhost:3000/*"
        ]
    }
}