{
    "compilerOptions": {
      "strict": true,
      "lib": [
          "dom",
          "es2015"
      ],
      "outDir": "./dist/",
      "noImplicitAny": true, 
      "module": "es6",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "paths": {
        "*": ["src/types/*"],
        "sharedComponents": ["src/sharedComponents"],
        "sharedTypes": ["src/sharedTypes/index.ts"],
        "theme": ["src/theme.js"],
        "utilities": ["src/utilities"]
      }
    }
  }